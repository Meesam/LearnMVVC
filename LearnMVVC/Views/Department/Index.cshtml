@model IEnumerable<Department>

@{
   ViewData["Title"] = "Departments";
}

<a class="btn btn-primary" asp-area="" asp-controller="Department" asp-action="AddDepartment">Add Department</a>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Title</td>
                    <td>
                        <a class="link-primary h6" asp-area="" asp-controller="Department" asp-route-id="@item.Id" asp-action="EditDepartment">Edit</a> |
                        <a class="link-danger h6" asp-area="" asp-controller="Department" asp-route-id="@item.Id" asp-action="AddDepartment">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
